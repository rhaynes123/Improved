@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p> And <a href="https://www.typescriptlang.org/docs/handbook/asp-net-core.html">TypeScript</a></p>
</div>
<div id="alert" class="alert d-none" role="alert"></div>
<div>
    <form id="improveHabitFormId">
        <h2 class="mb-4 text-center">Add a New Habit</h2>
        <div id="formData">
            <div class="mb-4">
                <label for="habitId" class="form-label">New Habit</label>
                <input type="text" id="habitId" name="habitName" class="form-control"/>
            </div>
            <div class="mb-4">
                <label for="startDateId" class="form-label">Start Date</label>
                <input type="date" id="startDateId" name="startDate" class="form-control"/>
            </div>
        </div>
        <div class="text-center">
            <button type="button" id="addHabitBtnId" class="btn btn-success">Add</button>
        </div>

        <!-- Habit form list -->
        <div id="habitList" class="mb-3"></div>

        <!-- Submit all habits -->
        <button type="button" id="submitAllBtn" class="btn btn-primary w-100">Save Habits</button>
        <div id="resultMessage" class="mt-3 text-center"></div>
    </form>
    
</div>